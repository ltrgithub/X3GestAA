{
    "$baseUrl": "http://localhost:8126/x3stb/erp/stubs",
    "$baseType": "application/json;vnd.sage=syracuse",
    "$url": "{$baseUrl}/employees",
    "$type": "application/json",
    "$title": "Liste de employees",
    "$properties": {
        "$resources": {
            "$type": "application/x-array",
            "$alphaPager": "{$url}?letter={$letter}",
            "$item": {
                "$descriptor": "prototype employee.$query",
                "$type": "application/json",
                "$url": "{$baseUrl}/{$pluralType}('{$key}')",
                "$value": "{firstName} {lastName}",
                "$title": "{firstName} {lastName}",
                "$description": "{firstName} {lastName}",
                "$pluralType": "employees",
                "$singularType": "employee",
                "$properties": {
                    "firstName": {
                        "$title": "First Name",
                        "$type": "application/x-string",
                        
                            "$maxLength": 30
                        ,
                        "$capabilities": "sort,filter"
                    },
                    "lastName": {
                        "$title": "Last Name",
                        "$type": "application/x-string",
                        
                            "$maxLength": 30
                        ,
                        "$isMandatory": true,
                        "$capabilities": "sort,filter",
                        "$links": {
                            "$details": {
                                "$type": "application/json;vnd.sage=syracuse",
                                "$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$singularType}.$details&role={$role}"
                            }
                        }
                    },
                    "title": {
                        "$title": "Title",
                        "$type": "application/x-choice",
                        "$value": {
                            "$type": "application/x-integer",
                            
                                "$enum": [
                                    {
                                        "$value": 1,
                                        "$title": "Monsieur"
                                    },
                                    {
                                        "$value": 2,
                                        "$title": "Mademoiselle"
                                    },
                                    {
                                        "$value": 3,
                                        "$title": "Madame"
                                    }
                                ]
                            },
                        "$capabilities": "sort,filter"
                    },
                    "maritalStatus": {
                        "$title": "Marital Status",
                        "$type": "application/x-choice",
                        "$value": {
                            "$type": "application/x-integer",
                            
                                "$enum": [
                                    {
                                        "$value": 0,
                                        "$title": "Célibataire"
                                    },
                                    {
                                        "$value": 1,
                                        "$title": "Marié"
                                    },
                                    {
                                        "$value": 2,
                                        "$title": "Divorcé"
                                    },
                                    {
                                        "$value": 3,
                                        "$title": "Séparé"
                                    },
                                    {
                                        "$value": 4,
                                        "$title": "Veuf"
                                    },
                                    {
                                        "$value": 5,
                                        "$title": "Vie maritale"
                                    },
                                    {
                                        "$value": 6,
                                        "$title": "PACS"
                                    },
                                    {
                                        "$value": 7,
                                        "$title": "Non connu"
                                    },
                                    {
                                        "$value": 8,
                                        "$title": "Non applicable"
                                    }
                                ]
                            },
                        "$capabilities": "sort,filter"
                    },
                    "birthDate": {
                        "$title": "Birth Date",
                        "$type": "application/x-date",
                        "$isMandatory": false,
                        "$capabilities": "sort,filter"
                    },
                    "testTime": {
                        "$title": "Test Time",
                        "$type": "application/x-time",
                        "$isMandatory": false,
                        "$capabilities": "sort,filter"
                    },
                    "foreignerWorker": {
                        "$title": "Foreigner worker",
                        "$type": "application/x-boolean",
                        "$capabilities": "sort,filter"
                    },
                    "email": {
                        "$title": "Email",
                        "$type": "application/x-string",
                        "$format": "$email",
                        "$capabilities": "sort,filter"
                    },
                    "phoneNumber": {
                        "$title": "Phone Number",
                        "$type": "application/x-string",
                        "$format": "$phone",
                        "$capabilities": "sort,filter"
                    },
                    "photo": {
                        "$title": "Photo",
                        "$type": "image",
                        "$url": "{$baseUrl}/{$pluralType}('{$key}')/photo",
                        "$capabilities": ""
                    },
                    "addressStreet": {
                        "$title": "Street",
                        "$type": "application/x-string",
                        "$capabilities": "sort,filter"
                    },
                    "addressZipCode": {
                        "$title": "Zip code",
                        "$type": "application/x-string",
                        "$capabilities": "sort,filter"
                    },
                    "addressCity": {
                        "$title": "City",
                        "$type": "application/x-string",
                        "$capabilities": "sort,filter"
                    },
                    "testInteger": {
                        "$title": "Test Integer",
                        "$type": "application/x-integer",
                        "$capabilities": "sort,filter"
                    },
                    "testDecimal": {
                        "$title": "Test Decimal",
                        "$type": "application/x-decimal",
                        "$capabilities": "sort,filter"
                    },
                    "country": {
                        "$title": "Country",
                        "$isMandatory": false,
                        "$capabilities": "sort,filter",
                        "$type": "application/x-reference",
                        "$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={singularType}.$thumb",
                        "$value": "{code}",
                        "$description": "Country",
                        "$properties": {
                            "code": {
                                "$type": "application/x-string"
                            },
                            "description": {
                                "$type": "application/x-string"
                            }
                        },
                        "$links": {
                            "$details": {
                                "$type": "application/json;vnd.sage=syracuse",
                                "$url": "{$baseUrl}/countries('{$key}')?representation=country.$details&role={$role}"
                            },
                            "$lookup": {
                                "$type": "application/json;vnd.sage=syracuse",
                                "$url": "{$baseUrl}/countries?representation=country.$lookup&role={$role}&trackingId={$trackingId}&binding=country"
                            }
                        }
                    },
                    "company": {
                        "$title": "Company",
                        "$isMandatory": true,
                        "$capabilities": "sort,filter",
                        "$type": "application/x-reference",
                        "$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={singularType}.$thumb",
                        "$value": "{code}",
                        "$description": "Company",
                        "$properties": {
                            "code": {
                                "$type": "application/x-string"
                            },
                            "description": {
                                "$type": "application/x-string"
                            }
                        },
                        "$links": {
                            "$details": {
                                "$type": "application/json;vnd.sage=syracuse",
                                "$url": "{$baseUrl}/companies('{$key}')?representation=company.$details&role={$role}"
                            },
                            "$lookup": {
                                "$type": "application/json;vnd.sage=syracuse",
                                "$url": "{$baseUrl}/companies?representation=company.$lookup&role={$role}&trackingId={$trackingId}&binding=company"
                            }
                        }
                    },
                    "$creUser": {
                        "$title": "Created by",
                        "$type": "application/x-string",
                        "$isDisabled": true,
                        "$isHidden": true,
                        "$capabilities": "sort,filter"
                    },
                    "$updUser": {
                        "$title": "Updated by",
                        "$type": "application/x-string",
                        "$isDisabled": true,
                        "$isHidden": true,
                        "$capabilities": "sort,filter"
                    },
                    "$creDate": {
                        "$title": "Created on",
                        "$type": "application/x-datetime",
                        "$isDisabled": true,
                        "$isHidden": true,
                        "$capabilities": "sort,filter"
                    },
                    "$updDate": {
                        "$title": "Updated on",
                        "$type": "application/x-datetime",
                        "$isDisabled": true,
                        "$isHidden": true,
                        "$capabilities": "sort,filter"
                    }
                },
                "$links": {
                    "$details": {
                        "$type": "application/json;vnd.sage=syracuse",
                        "$title": "Détails",
                        "$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$singularType}.$details&role={$role}"
                    },
                    "$edit": {
                        "$type": "application/json;vnd.sage=syracuse",
                        "$title": "Modifier",
                        "$url": "{$baseUrl}/{$pluralType}('{$key}')/$workingCopies?representation={$singularType}.$edit&role={$role}",
                        "$method": "POST"
                    },
                    "$delete": {
                        "$title": "Supprimer",
                        "$confirm": "L'enregistrement  sera supprimé. Confirmez-vous la suppression ?",
                        "$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$singularType}.$query&role={$role}",
                        "$type": "application/json;vnd.sage=syracuse",
                        "$method": "DELETE"
                    },
                    "$print": {
                        "$type": "application/pdf",
                        "$title": "Imprimer",
                        "$url": "{$baseUrl}/{$pluralType}?representation={$singularType}.$query&role={$role}"
                    }
                }
            }
        }
    },
    "$pluralType": "employees",
    "$singularType": "employee",
    "$links": {
        "$create": {
            "$type": "application/json;vnd.sage=syracuse",
            "$title": "Nouveau employee",
            "$url": "{$baseUrl}/{$pluralType}/$template/$workingCopies?representation={$singularType}.$edit&role={$role}",
            "$method": "POST"
        },
        "$print": {
            "$type": "application/pdf",
            "$title": "Imprimer",
            "$url": "{$baseUrl}/{$pluralType}?representation={$singularType}.$query&role={$role}"
        },
        "$excel": {
            "$type": "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
            "$title": "Excel",
            "$url": "{$baseUrl}/{$pluralType}?representation={$singularType}.$query&role={$role}"
        }
    },
    "$article": {
        "$layout": {
            "$items": [
                {
                    "$category": "section",
                    "$layout": {
                        "$items": [
                            {
                                "$bind": "$resources",
                                "$format": "cards",
                                "$isPagerHidden": true,
                                "$cards": {
                                    "$layout": {
                                        "$layoutType":   "row",
										"$fitToContent": true,
                                        "$items": [
                                            {
                                                "$category": "section",
                                                "$layoutType": "stack",
                                                "$items": [
                                                    {
                                                        "$bind": "photo",
														"$isTitleHidden": true
                                                    }
                                                ]
                                            },
                                            {
                                                "$layoutType": "stack",
                                                "$items": [
                                                    {
                                                        "$expression": "{firstName} <strong>{lastName}</strong>"
                                                    },
                                                    {
                                                        "$bind": "company",
                                                        "$isTitleHidden": true
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                }
                            }
                        ]
                    }
                }
            ]
        }
    }
}