<Application
    x:Class="SageX3WUP.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SageX3WUP.App"
    RequestedTheme="Light">
    <Application.Resources>
        
    <DataTemplate x:Key="ServerConfigReadOnly">
            <StackPanel Orientation="Vertical" Width="400" Background="#4d4f53" Padding="10,10,10,10">
            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="36" Margin="10,0,0,0" TextTrimming="WordEllipsis" TextWrapping="Wrap" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding Description}"  Foreground="White" FontSize="18" Margin="10,0,0,0" TextTrimming="WordEllipsis" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button>Make default</Button>
                <Button>Edit</Button>
                <Button>Remove</Button>
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    </Application.Resources>

</Application>
