{
	"$baseUrl": "http://localhost:8124/sdata/syracuse/collaboration/syracuse",
	"$baseType": "application/json;vnd.sage=syracuse",
	"$url": "{$baseUrl}/users",
	"$type": "application/json",
	"$title": "Liste de: users",
	"$properties": {
		"$resources": {
			"$type": "application/x-array",
			"$item": {
				"$descriptor": "prototype user.$query",
				"$type": "application/json",
				"$url": "{$baseUrl}/{$pluralType}('{$key}')",
				"$value": "{firstName} {lastName}",
				"$title": "User",
				"$description": "{firstName} {lastName} user profile",
				"$pluralType": "users",
				"$representation": "user",
				"$properties": {
					"login": {
						"$title": "Default Account",
						"$type": "application/x-string",
						
							"$isUnique": true
						,
						"$isMandatory": true,
						"$capabilities": "sort,filter,alphaTab"
					},
					"title": {
						"$title": "Title",
						"$type": "application/x-choice",
						"$value": {
							"$type": "application/x-string",
							
								"$enum": [{
									"$value": "Monsieur",
									"$title": "Monsieur"
								}, {
									"$value": "Mademoiselle",
									"$title": "Mademoiselle"
								}, {
									"$value": "Madame",
									"$title": "Madame"
								}]
							},
						"$capabilities": "sort,filter,alphaTab"
					},
					"firstName": {
						"$title": "First Name",
						"$type": "application/x-string",
						"$capabilities": "sort,filter,alphaTab"
					},
					"lastName": {
						"$title": "Last Name",
						"$type": "application/x-string",
						"$isMandatory": true,
						"$capabilities": "sort,filter,alphaTab",
						"$links": {
							"$details": {
								"$type": "application/json;vnd.sage=syracuse",
								"$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$representation}.$details&role={$role}"
							}
						}
					},
					"fullName": {
						"$title": "Full Name",
						"$type": "application/x-string",
						"$isDisabled": true,
						"$capabilities": "sort,filter,alphaTab"
					},
					"active": {
						"$title": "Active",
						"$type": "application/x-boolean",
						"$capabilities": "sort,filter"
					},
					"authentication": {
						"$title": "Authentication",
						"$type": "application/x-choice",
						"$value": {
							"$type": "application/x-string",
							
								"$enum": [{
									"$value": "",
									"$title": "Standard"
								}, {
									"$value": "db",
									"$title": "DB"
								}, {
									"$value": "ldap",
									"$title": "LDAP"
								}, {
									"$value": "oauth2",
									"$title": "OAuth2"
								}]
							},
						"$capabilities": "sort,filter,alphaTab"
					},
					"authenticationName": {
						"$title": "Authentication name",
						"$type": "application/x-string",
						"$capabilities": "sort,filter,alphaTab"
					},
					"email": {
						"$title": "Email",
						"$type": "application/x-string",
						"$format": "$email",
						"$capabilities": "sort,filter,alphaTab"
					},
					"photo": {
						"$title": "Photo",
						"$type": "image",
						"$url": "{$baseUrl}/{$pluralType}('{$key}')/photo",
						"$capabilities": ""
					},
					"preferences": {
						"$title": "User preferences",
						"$capabilities": "sort,filter",
						"$isHidden": true,
						"$type": "application/x-reference",
						"$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$representation}.$thumb",
						"$value": "{$key}",
						"$description": "User preferences",
						"$key": "{$uuid}",
						"$properties": {},
						"$links": {
							"$details": {
								"$type": "application/json;vnd.sage=syracuse",
								"$url": "{$baseUrl}/userPreferences('{$key}')?representation=userPreference.$details&role={$role}"
							},
							"$lookup": {
								"$type": "application/json;vnd.sage=syracuse",
								"$title": "Ajouter",
								"$url": "{$baseUrl}/userPreferences?representation=userPreference.$lookup&role={$role}&trackingId={$trackingId}&binding=preferences"
							}
						}
					},
					"ldap": {
						"$title": "LDAP instance",
						"$capabilities": "sort,filter",
						"$type": "application/x-reference",
						"$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$representation}.$thumb",
						"$value": "{name} {url}",
						"$description": "LDAP {name}",
						"$key": "{$uuid}",
						"$properties": {
							"name": {
								"$type": "application/x-string"
							},
							"url": {
								"$type": "application/x-string"
							}
						},
						"$links": {
							"$details": {
								"$type": "application/json;vnd.sage=syracuse",
								"$url": "{$baseUrl}/ldaps('{$key}')?representation=ldap.$details&role={$role}"
							},
							"$lookup": {
								"$type": "application/json;vnd.sage=syracuse",
								"$title": "Ajouter",
								"$url": "{$baseUrl}/ldaps?representation=ldap.$lookup&role={$role}&trackingId={$trackingId}&binding=ldap"
							}
						}
					},
					"oauth2": {
						"$title": "OAuth2 instance",
						"$capabilities": "sort,filter",
						"$type": "application/x-reference",
						"$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$representation}.$thumb",
						"$value": "{name} {baseSite}",
						"$description": "OAuth2 server {name}",
						"$key": "{$uuid}",
						"$properties": {
							"name": {
								"$type": "application/x-string"
							},
							"baseSite": {
								"$type": "application/x-string"
							}
						},
						"$links": {
							"$details": {
								"$type": "application/json;vnd.sage=syracuse",
								"$url": "{$baseUrl}/oauth2s('{$key}')?representation=oauth2.$details&role={$role}"
							},
							"$lookup": {
								"$type": "application/json;vnd.sage=syracuse",
								"$title": "Ajouter",
								"$url": "{$baseUrl}/oauth2s?representation=oauth2.$lookup&role={$role}&trackingId={$trackingId}&binding=oauth2"
							}
						}
					},
					"$creUser": {
						"$title": "Created by",
						"$type": "application/x-string",
						"$isDisabled": true,
						"$isHidden": true,
						"$capabilities": "sort,filter"
					},
					"$updUser": {
						"$title": "Updated by",
						"$type": "application/x-string",
						"$isDisabled": true,
						"$isHidden": true,
						"$capabilities": "sort,filter"
					},
					"$creDate": {
						"$title": "Created on",
						"$type": "application/x-datetime",
						"$isDisabled": true,
						"$isHidden": true,
						"$capabilities": "sort,filter"
					},
					"$updDate": {
						"$title": "Updated on",
						"$type": "application/x-datetime",
						"$isDisabled": true,
						"$isHidden": true,
						"$capabilities": "sort,filter"
					}
				},
				"$links": {
					"$details": {
						"$type": "application/json;vnd.sage=syracuse",
						"$title": "Consulter",
						"$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$representation}.$details&role={$role}"
					},
					"$edit": {
						"$type": "application/json;vnd.sage=syracuse",
						"$title": "Modifier",
						"$url": "{$baseUrl}/{$pluralType}('{$key}')/$workingCopies?representation={$representation}.$edit&role={$role}",
						"$method": "POST"
					},
					"$delete": {
						"$title": "Supprimer",
						"$confirm": "L'enregistrement  sera supprimé. Confirmez-vous la suppression ?",
						"$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$representation}.$query&role={$role}",
						"$type": "application/json;vnd.sage=syracuse",
						"$method": "DELETE"
					},
					"$print": {
						"$type": "application/pdf",
						"$title": "Imprimer",
						"$url": "{$baseUrl}/{$pluralType}?representation={$representation}.$query&role={$role}"
					}
				}
			}
		}
	},
	"$pluralType": "users",
	"$representation": "user",
	"$links": {
		"$create": {
			"$type": "application/json;vnd.sage=syracuse",
			"$title": "Créer",
			"$url": "{$baseUrl}/{$pluralType}/$template/$workingCopies?representation={$representation}.$edit&role={$role}",
			"$method": "POST"
		},
		"$print": {
			"$type": "application/pdf",
			"$title": "Imprimer",
			"$url": "{$baseUrl}/{$pluralType}?representation={$representation}.$query&role={$role}"
		},
		"$excel": {
			"$type": "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
			"$title": "Excel",
			"$url": "{$baseUrl}/{$pluralType}?representation={$representation}.$query&role={$role}"
		},
		"$word": {
			"$type": "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
			"$title": "Word",
			"$url": "{$baseUrl}/{$pluralType}?representation={$representation}.$query&role={$role}"
		}
	},
	"$article": {
		"$layout": {
			"$items": [{
				"$category": "section",
				"$layout": {
					"$items": [{
						"$bind": "$resources",
						"$layout": {
							"$items": [{
								"$bind": "login"
							}, {
								"$bind": "active"
							}, {
								"$bind": "title"
							}, {
								"$bind": "firstName"
							}, {
								"$bind": "lastName"
							}, {
								"$bind": "fullName"
							}, {
								"$bind": "email"
							}, {
								"$bind": "photo"
							}]
						}
					}]
				}
			}]
		}
	}
}