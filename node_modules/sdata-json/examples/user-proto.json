{
	"$url": "{$baseUrl}/{$pluralType}('{$key}')",
	"$title": "{title} {firstName} {lastName}",
	"$type": "application/json",
	"$key": "{$uuid}",
	"$description": "User Profile of {firstName} {lastName}",
	"$pluralType": "users",
	"$properties": {
		"login": {
			"$title": "Login",
			"$type": "application/x-string",
			"$constraints": {
				"$isUnique": true
			},
			"$isMandatory": true,
			"$capabilities": "sort,filter,alphaTab"
		},
		"title": {
			"$title": "Title",
			"$type": "application/x-choice",
			"$value": {
				"$type": "application/x-string",
				"$constraints": {
					"$enum": [{
						"$value": "M",
						"$title": "Monsieur"
					}, {
						"$value": "Ms",
						"$title": "Mademoiselle"
					}, {
						"$value": "Mme",
						"$title": "Madame"
					}]
				}
			},
			"$capabilities": "sort,filter,alphaTab"
		},
		"firstName": {
			"$title": "First Name",
			"$type": "application/x-string",
			"$capabilities": "sort,filter,alphaTab"
		},
		"lastName": {
			"$title": "Last Name",
			"$type": "application/x-string",
			"$isMandatory": true,
			"$capabilities": "sort,filter,alphaTab",
			"$links": {
				"$details": {
					"$type": "application/json;vnd.sage=sdata",
					"$url": "{$baseUrl}/{$pluralType}('{$key}')?representation={$representation}.$details&role={$role}"
				}
			}
		},
		"email": {
			"$title": "Email",
			"$type": "application/x-string",
			"$format": "$email",
			"$capabilities": "sort,filter,alphaTab"
		},
		"photo": {
			"$title": "Photo",
			"$type": "image",
			"$url": "{$baseUrl}/{$pluralType}('{$key}')/photo"
		},
		"address": {
			"$title": "Address",
			"$type": "application/json",
			"$properties": {
				"street": {
					"$title": "Street",
					"$type": "applicatiion/x-string"
				},
				"zip": {
					"$title": "Zip Code",
					"$type": "application/x-string"
				},
				"city": {
					"$title": "City",
					"$type": "application/x-string"
				},
				"country": {
					"$title": "Country",
					"$type": "application/x-reference",
					"$value": "{code}",
					"$item": {
						"$title": "{name}",
						"$type": "application/json",
						"$pluralType": "countries",
						"$properties": {
							"code": {
								"$title": "Code",
								"$type": "application/x-string"
							},
							"name": {
								"$title": "Name",
								"$type": "application/x-string"
							}
						}
					}
				}
			}
		},
		"phones": {
			"$title": "Phones",
			"$type": "application/x-collection",
			"$item": {
				"$type": "application/json",
				"$properties": {
					"type": {
						"$title": "Type",
						"$type": "applicatiion/x-string"
					},
					"number": {
						"$title": "Number",
						"$type": "application/x-string",
						"$format": "phone"
					}
				}
			}
		},
		"roles": {
			"$title": "Roles",
			"$type": "application/x-collection",
			"$item": {
				"$type": "application/x-reference",
				"$item": {
					"$title": "{name}",
					"$type": "application/json",
					"$pluralType": "roles",
					"$url": "{$baseUrl}/{$pluralType}('{$key}')",
					"$value": "{name}",
					"$properties": {
						"name": {
							"$title": "Name",
							"$type": "application/x-string"
						},
						"description": {
							"$title": "Description",
							"$type": "application/x-string"
						}
					},
					"$links": {
						"$details": {
							"$type": "application/json;vnd.sage=sdata",
							"$url": "{$baseUrl}/roles('{$key}')"
						},
						"$lookup": {
							"$type": "application/json;vnd.sage=sdata",
							"$url": "{$baseUrl}/roles"
						}
					}
				}
			}
		}
	},
	"$links": {
		"$details": {
			"$title": "Details",
			"$type": "application/json;vnd.sage=sdata",
			"$url": "{$baseUrl}/{$pluralType}('{$key}')"
		},
		"$edit": {
			"$title": "Edit",
			"$type": "application/json;vnd.sage=sdata",
			"$url": "{$baseUrl}/{$pluralType}('{$key}')/$workingCopies",
			"$method": "POST"
		},
		"$delete": {
			"$title": "Delete",
			"$confirm": "User {firstName} {lastName} will be deleted. Do you confirm?",
			"$url": "{$baseUrl}/{$pluralType}('{$key}')",
			"$type": "application/json;vnd.sage=sdata",
			"$method": "DELETE"
		},
		"$print": {
			"$title": "Print",
			"$type": "application/pdf",
			"$url": "{$baseUrl}/{$pluralType}('{$key}')"
		}
	}
}