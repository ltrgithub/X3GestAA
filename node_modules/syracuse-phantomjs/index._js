		if (msg && msg.event === eventName) {
			clearTimeout(tt);
			gotCallback = true;
			if (_cb && gotResult) {
				_cb(null, result || "success");
				_cb = null;
			}
		}
	};
	handler(function(err, res) {
		if (err) {
			_cb && _cb(err);
			_cb = null;
		} else {
			result = res;
			gotResult = true;
			gotCallback && _cb && _cb(err, res);
		}
	});
}

