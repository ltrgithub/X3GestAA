	var _tags = [];
	//
	this.dbMeta = contract.dbMeta || {};
	this.name = contract.name;
	this.contract = contract;

	function _tagsMask(tags) {
		if (!tags) return 0;
		var mask = 0;
		tags.split(",").forEach(function(tag) {
			var i = _tags.indexOf(tag);
			if (i < 0) {
				i = _tags.length;
				_tags.push(tag);
			}
			mask |= 1 << i;
