			request.method = 'GET';
		}
	}
	// don't cache is special UI developper flag is set
	if (config.system.noUiCache) opts.nocache = true;

	if (!staticProvider(_, request, response, opts) && !staticShadowProvider(_, request, response, opts)) return notFound(_, request, response);
}


