{
    "$prototype": {
        "$title": "Fields UI tests",
        "$": {
            "simpleFieldsEdit": {
                "$type": "application/x-portlet",
                "$title": "Simple Fields Edit",
                "$format": "$item",
                "$item": {
                    "$category": "tests",
                    "$format": "simpleFields",
                    "$isEditMode": true
                }
            },
            "simpleFieldsDetails": {
                "$type": "application/x-portlet",
                "$title": "Simple Fields Details",
                "$format": "$item",
                "$item": {
                    "$category": "tests",
                    "$format": "simpleFields",
                    "$isEditMode": false
                }
            },
			"referenceFields": {
                "$type": "application/x-portlet",
                "$title": "Reference",
                "$format": "$item",
                "$item": {
                    "$category": "tests",
                    "$format": "referenceFields"
                }
            }
        }
    },
    "$article": {
        "$category": "dashboard",
        "$layout": {
            "$layoutType": "tabs",
            "$items": [
                {
                    "$category": "section",
                    "$title": "Fields$edit",
                    "$layout": {
                        "$items": [
                            {
                                "$bind": "simpleFieldsEdit"
                            }
                        ]
                    }
                },
                {
                    "$category": "section",
                    "$title": "Fields$details",
                    "$layout": {
                        "$items": [
                            {
                                "$bind": "simpleFieldsDetails"
                            }
                        ]
                    }
                },
				{
                    "$category": "section",
                    "$title": "Reference",
                    "$layout": {
                        "$items": [
                            {
                                "$bind": "referenceFields"
                            }
                        ]
                    }
                }
            ]
        }
    }
}