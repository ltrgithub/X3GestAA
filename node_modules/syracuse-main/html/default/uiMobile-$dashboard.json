{
    "$prototype": {
        "$title": "UI Mobile tests",
        "$": {
            "diagnosesbox": {
                "$type": "application/x-portlet",
                "$title": "Diagnoses",
                "$format": "$item",
                "$item": {
                    "$category": "tests",
                    "$format": "diagnoses"
                }
            },
            "messagebox": {
                "$type": "application/x-portlet",
                "$title": "Message box",
                "$format": "$item",
                "$item": {
                    "$category": "tests",
                    "$format": "messageBox"
                }
            },
            "simpleFieldsEdit": {
                "$type": "application/x-portlet",
                "$title": "Simple Fields",
                "$format": "$item",
                "$item": {
                    "$category": "tests",
                    "$format": "simpleFields",
					"$isEditMode": true
                }
            },
			"simpleFieldsDetails": {
                "$type": "application/x-portlet",
                "$title": "Simple Fields",
                "$format": "$item",
                "$item": {
                    "$category": "tests",
                    "$format": "simpleFields",
					"$isEditMode": false
                }
            }
        }
    },
    "$article": {
        "$category": "dashboard",
        "$layout": {
            "$layoutType": "tabs",
            "$items": [
                {
                    "$category": "section",
                    "$title": "Diagnoses",
                    "$layout": {
                        "$items": [
                            {
                                "$bind": "diagnosesbox"
                            }
                        ]
                    }
                },
                {
                    "$category": "section",
                    "$title": "Message box",
                    "$layout": {
                        "$items": [
                            {
                                "$bind": "messagebox"
                            }
                        ]
                    }
                },
                {
                    "$category": "section",
                    "$title": "Simple fields $edit",
                    "$layout": {
                        "$items": [
                            {
                                "$bind": "simpleFieldsEdit"
                            }
                        ]
                    }
                },
				{
                    "$category": "section",
                    "$title": "Simple fields $details",
                    "$layout": {
                        "$items": [
                            {
                                "$bind": "simpleFieldsDetails"
                            }
                        ]
                    }
                }
            ]
        }
    }
}