	read: function(_, len, withTimeout) {
		try {
			return this.stream.read(_, len, withTimeout);
		} catch (e) {
			if (e.code === "ETIMEOUT") {
				e.message = locale.format(module, "x3ReadTimeout", len, this.stream.available());
			}
			// destroy stream
			this.stream.destroy();
			this.stream = null;
			//
