	execAckCall: function(_, subprogName, debugInfo, params) {

		var body = {
			act: 1077,
			fld: {
				ist: {
					win: "A",
					xid: "@@0"
				}
			},
			param: {
				target: {
					"win": "A",
					"xid": "@@0"
				},
				std: [{
					json: {
						"spgm": subprogName,
						"params": params
					}
				}]
			}
		};

		this.processAction(_, body, false);
		// TODO : Don't do parse(stringify)
		var rpc = this._trackLists.RPC[0];
		return rpc ? JSON.parse(JSON.stringify(rpc)) : null;
