var helpers = require('syracuse-core/lib/helpers');
var util = require('util');


var _player= function(_, stream, recordPlayer, config) {
	var self = this;
	self._recordPlayer = recordPlayer;	
	self._config = config;	
}

exports.streamPlayer = helpers.defineClass(_player, null, {
	_log:function(txt){
		if (this._config.trace) this._config.trace(txt);
	},
	logerr:function(e, txt) {
		this._log(txt);	
		this._log(e.stack ? e.stack : e.message ? e.message : e);
	}
});
