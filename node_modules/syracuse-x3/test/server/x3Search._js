		tracer && tracer("prototype=", prototype);
		ok(true, "JSON prototype");
		var data = x3Helper.get(_, _getCookie(_), x3Helper.x3Url(prototype.$url.replace("{$baseUrl}/", "")), 200);
		ok(true, "JSON data");

