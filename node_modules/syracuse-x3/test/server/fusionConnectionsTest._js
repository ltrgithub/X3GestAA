function fix(obj) {
	if (obj.sap.acts) {
		obj.sap.acts = obj.sap.acts.sort(function(a, b) {
			return +a.id - +b.id;
		});
	}
	return obj;
}

function getNonObjCount(obj) {
	var count = 0;
	for (var i in obj) {
		if (typeof obj[i] === 'object') {
			count += getNonObjCount(obj[i]);
		} else if (obj.hasOwnProperty(i)) {
			count++;
		}
	}
	return count;
}

function connect(_, expected) {
	try {
		var client = new CAdapiClient(stream, {
			adxHttpPub: "http://172.28.20.117/Adonix_SYDVLP",
			adxFolder: "SYDEV",
		}, {
			isInteractiveSession: true,
			dateFormat: 1,
			datePivot: 2,
			serverDateFormat: "",
		});
		var respObj = client.start(_);
		var response = JSON.stringify(respObj);
		console.log("Response: " + JSON.stringify(respObj, null, 2));

		response = fix(JSON.parse(response));
		compare(response, expected, "response");
	} catch (ex) {
		console.error(ex.stack);
	}
}

