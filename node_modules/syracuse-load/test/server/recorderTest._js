"use strict";

var recorder = require('syracuse-load/lib/recorder')
var util = require('util')
var stream = require('stream');
var fs = require('fs')

var tracer = console.log

var qmodule = QUnit.module;
qmodule('recorder');



//stream which outputs 'index' chunks of data
function SourceStream(index) {
	var self = this;
	var paused = false;
	self.readable = true;
	self.writable = false;
	stream.Stream.call(this);
	self.pause = function() {
		tracer("Source paused")
		paused = true;
	}
	self.resume = function() {
		tracer("Source resumed")
		paused = false;
		emitData();
	}
	
	function emitData() {
		process.nextTick(function() {
			while (!paused && index >= 0) {
				if (index > 0) {
					var b = new Buffer(1);
					b[0] = 96+index;
					index--
					tracer("Source data "+b)
					self.emit('data', b);					
				} else {
					index--
					tracer("Source end");
					self.emit('end');
				}
			}
		})
	}
}

util.inherits(SourceStream, stream.Stream);

