<script type="text/x-handlebars-template" id="tmplField"> 
	<div class="sm-field-slot">
		<div class="sm-field-title">
			{{$title}}
		</div>
		<div class="sm-field-core">
			<div class="sm-field-value-slot">
				<div class="sm-field-value">
					{{#if $isEditMode}}
						<input type="text" class="sm-field-input form-control" value="{{value}}">
					{{else}}
						<div class="sm-field-value-read">
							{{#if isPhone}}
								<a class="sm-phone-link" href="tel:{{value}}">
									<span class="sm-phone-badge badge pull-left"></span>{{value}}
								</a>
							{{else}}
								{{#if isEmail}}
									<a class="sm-email-link" href="mailto:{{value}}">
										<span class="sm-email-badge badge pull-left"></span>{{value}}
									</a>
								{{else}}
									{{value}}
								{{/if}}
							{{/if}}
						</div>
					{{/if}}
				</div>			
			</div>
		</div>
	</div>
</script>



<script type="text/x-handlebars-template" id="tmplFieldBoolean">
	<div class="sm-field-slot">
		{{#if $isEditMode}}
			<div class="sm-field-core">
				<div class="sm-field-value-slot">
					<div class="sm-field-value">
						<input type="checkbox" class="sm-field-input-boolean" 
						{{#if value}}
							checked="true"
						{{else}}
							checked="false"
						{{/if}}
						>
					</div>	
				</div>
			</div>
			<div class="sm-field-title">
				{{$title}}
			</div>
		{{else}}
			<div class="sm-field-title">
				{{$title}}
			</div>
			<div class="sm-field-core">
				<div class="sm-field-value-slot">
					<div class="sm-field-value-read sm-field-boolean">
						{{#if value}}
							<span class="glyphicon glyphicon-ok"></span>
						{{/if}}
					</div>	
				</div>
			</div>		
		{{/if}}
	</div>
</script>


<script type="text/x-handlebars-template" id="tmplFieldChoice">
	<div class="sm-field-slot">
		<div class="sm-field-title">
				{{$title}}
		</div>
		<div class="sm-field-core">
			<div class="sm-field-value-slot">
				<div class="sm-field-value">
					{{#if $isEditMode}}
						{{#if isRadio}}
							{{#each choiceItem}}
								<div class="sm-field-radio-item">
									<input type="radio" class="sm-field-choice-radio" {{#if isSelected}}checked="true"{{/if}}
									value={{@index}} name="sm-radio-{{fieldId}}"
									>
									<div class="sm-field-choice-radio-title">{{itemValue}}</div>
								</div>
							{{/each}}		
						{{else}}
							<div class="btn-group">
								<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
								    {{value}}
								<span class="caret"></span>
								</button>
								<ul class="dropdown-menu" role="menu">						
									{{#each choiceItem}}
										<li {{#if isSelected}}class="active"{{/if}}><a class="sm-field-choice-combo-item" href="#">{{itemValue}}</a></li>
									{{/each}}
								</ul>
							</div>
						{{/if}}
					{{else}}
						<div class="sm-field-value-read">
							{{value}}
						</div>
					{{/if}}
				</div>			
			</div>
		</div>
	</div>	
</script>


<script type="text/x-handlebars-template" id="tmplFieldProgress">
	<div class="sm-field-slot">
		<div class="sm-field-title">
			{{$title}}
		</div>
		<div class="sm-field-core">
			<div class="sm-field-value-slot">
				<div class="sm-field-value">
					<div class="progress">
						<div class="progress-bar" role="progressbar" 
						aria-valuenow="{{value}}" 
						aria-valuemin="{{#if valueMin}}{{valueMin}}{{else}}0{{/if}}" 
						aria-valuemax="{{#if valueMax}}{{valueMax}}{{else}}100{{/if}}" style="width: {{valueNow}}%;">
							{{value}} {{unit}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</script> 