<script type="text/x-handlebars-template" id="tmplLayout"> 
<div class="container s-m-layout s-m-{{$layoutType}}" id="{{id}}">
	{{#if $title}}
		<header class="s-m-layout-header">
			{{#if isTabLayout}}
				<div class="s-m-nav-tabs-slot">
					<ul class="nav nav-tabs" role="tablist">
					{{#each navListItem}}
					<li class="{{#if active}}active{{/if}}"><a class="s-m-tab" href="#">{{$title}}</a></li>
					{{/each}}
					</ul>
				</div>
			{{else}}
				{{$title}}
			{{/if}}
		</header>
	{{/if}}
	<div class="{{$layoutType}}" style="{{displayOptions}}">
		{{#if hasOneChild}}
			{{{childHTML}}}
		{{else}}
			{{#each coreItem}}
				<div class="s-m-layout-cell 
				{{#if isRowLayout}}
					{{#if $widthMd}}col-md-{{$widthMd}}{{/if}}
					{{#if $widthSm}}col-sm-{{$widthSm}}{{/if}}
					{{#if $widthXs}}col-xs-{{$widthXs}}{{/if}}
					{{#if $widthLd}}col-ld-{{$widthLd}}{{/if}}
				{{/if}}
				" 	{{#if display}}
						style="display:"
					{{else}}
						style="display:none"
				  	{{/if}}
				>
					{{{coreItemContent}}}
				</div>
			{{/each}}
		{{/if}}
	</div>
</div>
</script>
