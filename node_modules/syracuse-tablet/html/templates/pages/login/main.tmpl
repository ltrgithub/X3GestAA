<br>
<div class="s-home-container">
	<div class="s-home-form-container">
		<div class="container">
{{#if reason}}
			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-6 alert alert-success">
					{{reason}}
				</div>
			</div>
{{/if}}
			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-6">
					<div class="well">
						<div class="form-group">
							<label>{{label_user}}</label> <input type="text" value=""
								class="form-control" placeholder="{{placeholder_user}}"
								id="login-user">
						</div>
						<div class="form-group">
							<label>{{label_password}}</label> <input type="password"
								class="form-control" placeholder="{{placeholder_password}}"
								id="login-password">
						</div>
						<div class="form-group">
							<label>{{label_lang}}</label> <select class="form-control" id="login-locale">
								{{{locales}}}
							</select>
						</div>
						<button id="login-login" data-action="login" type="button"
							class="btn btn-primary">{{act_login}}</button>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-6">
					<div id="login-success" style="display: none"
						class="alert alert-success" role="alert"></div>
					<div id="login-fail" style="display: none"
						class="alert alert-danger" role="alert"></div>
				</div>
			</div>
		</div>
	</div>
</div>