{
  "$layoutType": "stack",
  "$localization": {},
  "$comment": "",
  "$allowDownload": true,
  "$pageActionSettings": [
    {
      "name": "LOCKE",
      "icon": {
        "css": "fa fa-lock",
        "name": "lock"
      },
      "$title": "Bloquer",
      "options": {
        "footerHeader": true,
        "refreshPage": true,
        "multiselection": true
      }
    },
    {
      "name": "UNLOCKE",
      "icon": {
        "css": "fa fa-unlock-alt",
        "name": "unlock-alt"
      },
      "$title": "DÃ©bloquer",
      "options": {
        "footerHeader": true,
        "refreshPage": true,
        "multiselection": true
      }
    }
  ],
  "$items": [
    {
      "$bind": "$resources",
      "$isTitleHidden": true,
      "$arrayOptions": {
        "showPagination": false,
        "showSortFilter": false,
        "rowIndex": true,
        "showSearch": true,
        "showRowDetailLink": true
      },
      "$statusEnabled": "multi",
      
      "$status":[
                 {
                	 "field": "BPCNUM",
                	 "operator": "like_s",
                	 "$type": "application/x-string",
                	 "value": "A",
                	 "color": {
                		 "css": "s-m-color-warning",
                		 "name": "Avertissement",
                		 "id": "warning",
                		 "bgColor": "rgb(255, 130, 64)",
                		 "color": "rgb(255, 255, 255)",
                		 "hex": "#ff8240"
                	 },
                	 "icon": {
                		 "css": "fa fa-exclamation",
                		 "name": "exclamation"
                	 }
                 },
                 {
                	 "field": "BPCNUM",
                	 "operator": "like_s",
                	 "$type": "application/x-string",
                	 "value": "E",
                	 "color": {
                		 "css": "s-m-color-alert",
                		 "name": "Alerte",
                		 "id": "alert",
                		 "bgColor": "rgb(203, 53, 0)",
                		 "color": "rgb(255, 255, 255)",
                		 "hex": "#cb3500"
                	 },
                	 "icon": {
                		 "css": "fa fa-envelope-square",
                		 "name": "envelope-square"
                	 }
                 },{
                	 "field": "BPCNUM",
                	 "operator": "like_s",
                	 "$type": "application/x-string",
                	 "value": "F",
                	 "color": {
                		 "css": "s-m-color-blue",
                		 "name": "Bleu",
                		 "id": "blue",
                		 "bgColor": "rgb(0, 159, 218)",
                		 "color": "rgb(255, 255, 255)",
                		 "hex": "#009fda"
                	 },
                	 "icon": {
                		 "css": "fa fa-check-square",
                		 "name": "check-square"
                	 }
                 },{
                	 "field": "BPCNUM",
                	 "operator": "gt",
                	 "$type": "application/x-string",
                	 "value": "F",
                	 "color": {
                		 "css": "s-m-color-purple",
                		 "name": "Violet",
                		 "id": "purple",
                		 "bgColor": "rgb(102, 57, 183)",
                		 "color": "rgb(255, 255, 255)",
                		 "hex": "#6639b7"
                	 },
                	 "icon": {
                		 "css": "fa fa-thumbs-down",
                		 "name": "thumbs-down"
                	 }
                 }
                 ],
      "$table": [
        {
          "$bind": "BPCNUM",
          "$title": "Customer",
          "$type": "application/x-string",
          "$titleOrig": "{@3662}",
          "$widthType": "auto",
          "$widthVal": 0,
          "$imgHeight": "small"
        },
        {
          "$bind": "BPCNAM",
          "$title": "Company name",
          "$type": "application/x-string",
          "$titleOrig": "{@1644}",
          "$widthType": "auto",
          "$widthVal": 0,
          "$imgHeight": "small"
        },
        {
          "$bind": "RPOSCOD",
          "$title": "Postal code",
          "$type": "application/x-string",
          "$titleOrig": "{@210}",
          "$widthType": "auto",
          "$widthVal": 0,
          "$imgHeight": "small"
        }
      ],
      "$arrayBgColor": "darkgrey",
      "$display": "table",
      "$minWidth": 6,
      "$filters": "none",
      "$cardsPerRow": "3",
      "$card": {
        "$layoutType": "stack",
        "$localization": {},
        "$items": [
          {
            "$layoutType": "row",
            "$items": [
              {
                "$layoutType": "cell",
                "$bgColor": "",
                "$items": [
                  {
                    "$bind": "BPCNAM",
                    "$labelPosition": "top",
                    "$isTitleHidden": true,
                    "$theme": "largetitle"
                  }
                ],
                "$sameSize": true,
                "$widthAll": 12
              }
            ]
          },
          {
            "$layoutType": "row",
            "$items": [
              {
                "$layoutType": "cell",
                "$bgColor": "",
                "$widthXs": "6",
                "$widthSm": "6",
                "$widthMd": "6",
                "$widthLg": "6",
                "$items": [
                  {
                    "$bind": "BPCNUM",
                    "$labelPosition": "top"
                  }
                ]
              },
              {
                "$layoutType": "cell",
                "$bgColor": "",
                "$widthXs": "6",
                "$widthSm": "6",
                "$widthMd": "6",
                "$widthLg": "6",
                "$items": [
                  {
                    "$bind": "RPOSCOD",
                    "$labelPosition": "top"
                  }
                ]
              }
            ]
          }
        ]
      },
      "$isDirty": {
        "$display": true
      }
    }
  ]
}