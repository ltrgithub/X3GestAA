{
  "$layoutType": "stack",
  "$localization": {},
  "$comment": "",
  "$items": [
    {
      "$bind": "$resources",
      "$isTitleHidden": true,
      "$arrayOptions": {
        "showPagination": false,
        "showSortFilter": true,
        "rowIndex": true,
        "showSearch": true,
        "showRowDetailLink": true
      },
      "$statusEnabled": "multi",
      "$status":[
                 {
                	 "field": "BPCNUM",
                	 "operator": "like_s",
                	 "$type": "application/x-string",
                	 "value": "A",
                	 "color": {
                		 "css": "s-m-color-warning",
                		 "name": "Avertissement",
                		 "id": "warning",
                		 "bgColor": "rgb(255, 130, 64)",
                		 "color": "rgb(255, 255, 255)",
                		 "hex": "#ff8240"
                	 },
                	 "icon": {
                		 "css": "fa fa-exclamation",
                		 "name": "exclamation"
                	 }
                 },
                 {
                	 "field": "BPCNUM",
                	 "operator": "like_s",
                	 "$type": "application/x-string",
                	 "value": "E",
                	 "color": {
                		 "css": "s-m-color-alert",
                		 "name": "Alerte",
                		 "id": "alert",
                		 "bgColor": "rgb(203, 53, 0)",
                		 "color": "rgb(255, 255, 255)",
                		 "hex": "#cb3500"
                	 },
                	 "icon": {
                		 "css": "fa fa-envelope-square",
                		 "name": "envelope-square"
                	 }
                 },{
                	 "field": "BPCNUM",
                	 "operator": "lt",
                	 "$type": "application/x-string",
                	 "value": "F",
                	 "color": {
                		 "css": "s-m-color-blue",
                		 "name": "Bleu",
                		 "id": "blue",
                		 "bgColor": "rgb(0, 159, 218)",
                		 "color": "rgb(255, 255, 255)",
                		 "hex": "#009fda"
                	 },
                	 "icon": {
                		 "css": "fa fa-check-square",
                		 "name": "check-square"
                	 }
                 },{
                	 "field": "BPCNUM",
                	 "operator": "gt",
                	 "$type": "application/x-string",
                	 "value": "F",
                	 "color": {
                		 "css": "s-m-color-purple",
                		 "name": "Violet",
                		 "id": "purple",
                		 "bgColor": "rgb(102, 57, 183)",
                		 "color": "rgb(255, 255, 255)",
                		 "hex": "#6639b7"
                	 },
                	 "icon": {
                		 "css": "fa fa-thumbs-down",
                		 "name": "thumbs-down"
                	 }
                 }
                 ],
     "$arrayBgColor": "darkgrey",
     "$display": "table",
     "$filters": "list",
     "$isDirty": {
       "$display": true
     },
      "$table": [
        {
          "$bind": "BPCNUM",
          "$title": "Customer",
          "$type": "application/x-string",
          "$titleOrig": "{@3662}",
          "$widthType": "fixed",
          "$widthVal": 6,
          "$imgHeight": "small"
        },
        {
            "$bind": "RPOSCOD",
            "$title": "Postal code",
            "$type": "application/x-string",
            "$titleOrig": "{@210}",
            "$widthType": "fixed",
            "$widthVal": 6,
            "$imgHeight": "small"
          },
        {
          "$bind": "BPCNAM",
          "$title": "Company name",
          "$type": "application/x-string",
          "$titleOrig": "{@1644}",
          "$widthType": "auto",
          "$widthVal": 0,
          "$imgHeight": "small"
        }
      ]
    }
  ]
}