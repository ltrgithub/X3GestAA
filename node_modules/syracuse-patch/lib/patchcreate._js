	var baseRelease;
	var newRelease;
	var patchFile;
	var checkSource = true;
	var x3Information = true;
	var startVersion;
	var endVersion;
	var description;
	for (var i = 0; i < args.length; i++) {
		var argument = args[i];
		switch (argument) { // arguments without parameter
			case '--start-from-release':
			case '--start-from-branch':
				startFromRelease = true;
				break;
			case '--no-check':
				checkSource = false;
				break;
			case '--no-x3-patch-info':
