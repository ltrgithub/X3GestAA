"use strict";

var util = require('./util');

exports.entity = {
	$properties: {
		CODACT: {
			$title: "Activity code"
		}
	},
	$fetchInstances: function(_, context, parameters) {
		var self = this;
		var codes = [];
		var res = util.query(_, context, parameters, "ACTIV", "$query", function(_, inst) {
			var instance = self.factory.createInstance(_, null, context.db, context);
			instance.CODACT(_, inst.CODACT(_));
			codes.push(instance);
		});
		return codes;
	},
	$defaultOrder: [
		["CODACT", true]
	]
}