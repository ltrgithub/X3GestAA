"use strict";

var datetime = require("syracuse-core/lib/types/datetime");

exports.entity = {
	$titleTemplate: "Server logs",
	$valueTemplate: "{description}/{logDate}",
	$properties: {
		description: {
			$title: "Description",
			$isMandatory: true,
			$linksToDetails: true
		},
		logDate: {
			$title: "Log date",
			$type: "datetime",
			$isMandatory: true,
			defaultValue: function(_) {
				return [datetime.now()];
			}
		},
		errorDiags: {
			$title: "Errors",
			$isArray: true
		},
		warnDiags: {
			$title: "Warnings",
			$isArray: true
		},
		infoDiags: {
			$title: "Information",
			$isArray: true
		}
	}
};