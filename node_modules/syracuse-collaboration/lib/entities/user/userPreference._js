"use strict";

var adminHelper = require("syracuse-collaboration/lib/helpers").AdminHelper;

exports.entity = {
	$properties: {
		lastLocaleCode: {
			$title: "Last locale code"
		},
		sitePreferences: {
			$title: "Site preferences",
			$type: "json"
		},
		lastLandingPageName: {
			$title: "Last landing page name"
		}
	},
	$relations: {
		lastRole: {
			$type: "role",
			$title: "Last selected role",
			$nullOnDelete: true
		},
		lastEndpoint: {
			$type: "endPoint",
			$title: "Last selected endpoint",
			$nullOnDelete: true
		},
		lastTheme: {
			$type: "theme",
			$title: "Last selected theme",
			$nullOnDelete: true
		},
		applicationConnections: {
			$type: "applicationConnectionItems",
			$title: "Application connections",
			$isChild: true
		}
	},
	$functions: {
		getAppConnection: function(_, ep) {
			if (!ep) return null;
			var storedItems = this.applicationConnections(_).toArray(_).filter_(_, function(_, ac) {
				var acEp = ac.endpoint(_);
				return acEp && acEp.$uuid && acEp.$uuid === ep.$uuid;
			});
			if (storedItems && storedItems.length) {
				return storedItems[0];
			}
			return null;
		},
		setAppConnection: function(_, selEp, inst) {
			var stored = this.getAppConnection(_, selEp);
			// compare stored and current instances
			if (inst && stored) {
				if (inst.$uuid === stored.$uuid) {
					var proto = inst.proto(_);
					if (!stored.proto(_) || stored.proto(_) !== proto) {
						proto = typeof proto === "string" ? proto : JSON.stringify(proto);
						stored.proto(_, proto);
					}
					var data = inst.data(_);
					if (!stored.data(_) || stored.data(_) !== data) {
						data = typeof data === "string" ? data : JSON.stringify(data);
						stored.data(_, data);
					}
				}
				//
				return stored;
			} else if (!inst && stored) {
				return stored;
			} else if (inst && !stored && inst.endpoint(_).$uuid === selEp) {
				this.applicationConnections(_).set(_, inst);
				return inst;
			} else {
				return null;
			}
		}
	}
};