				sessionManager.logout(_, context.request, context.response);
				var res = instance.serializeInstance(_);
				res.$actions = res.$actions || {};
				res.$actions.$logout = {
					$isRequested: false,
					$isDisabled: true,
					$links: {
						$location: {
							// retourner a la page par dï¿½faut du serveur
							$url: "/"
						}
					}
				};
				context.reply(_, 200, res);
			}
		}
	}
