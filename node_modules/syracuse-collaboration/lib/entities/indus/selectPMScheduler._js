"use strict"

var jsurl = require("jsurl");

exports.entity = {
	$properties: {
		parameters: {
			$title: "Parameters",
			$isHidden: true,
			$compute: function(_, instance) {
				return jsurl.stringify({
					scheduler: {
						$uuid: instance.scheduler(_) && instance.scheduler(_).$uuid
					},
					selectTarget: instance.selectTarget(_) && instance.selectTarget(_).parameters
				});
			}
		}
	},
	$relations: {
		scheduler: {
			$title: "Scheduler",
			$type: "automate",
			$isMandatory: true
		},
		selectTarget: {
			$title: "Options",
			$type: "selectExportTarget",
			$isChild: true
		}
	}
}