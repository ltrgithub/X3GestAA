"use strict";

exports.entity = {
	$titleTemplate: "Vignettes",
	$valueTemplate: "{vignette.title - endpoint.description}",
	$properties: {
		useCurrentEndpoint: {
			$title: "Use current endpoint",
			$type: "boolean",
			$isNullable: true
		}
	},
	$relations: {
		vignette: {
			$title: "Vignette",
			$type: "portlet",
			$isMandatory: true
		},
		endpoint: {
			$title: "Endpoint",
			$type: "endPoint",
			$isMandatory: function(_, instance) {
				return !instance.useCurrentEndpoint(_);
			}
		}
	}
};