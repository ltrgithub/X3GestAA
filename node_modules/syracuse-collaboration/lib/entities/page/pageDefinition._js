"use strict"

exports.entity = {
	$titleTemplate: "Page",
	$descriptionTemplate: "Page definition",
	$valueTemplate: "{title}",
	$properties: {
		title: {
			$title: "Title",
			$linksToDetails: true,
			$isLocalized: true,
			$isMandatory: true
		},
		description: {
			$title: "Description",
			$isLocalized: true
		},
		representation: {
			$title: "Representation",
			$isMandatory: function(_, instance) {
				return instance.facet(_) !== "$dashboard";
			},
			$isDefined: function(_, instance) {
				return instance.facet(_) !== "$dashboard";
			}
		},
		dashboardName: {
			$title: "Dashboard name",
			$isMandatory: function(_, instance) {
				return instance.facet(_) === "$dashboard";
			},
			$isDefined: function(_, instance) {
				return instance.facet(_) === "$dashboard";
			}
		},
		facet: {
			$title: "Facet",
			$enum: ["$query", "$details", "$edit", "$thumb", "$lookup", "$select", "$dashboard"],
			$enumCaptions: ["Query", "Details", "Edit", "Thmbnails", "Lookup", "Select", "Dashboard"],
			$isMandatory: true
		}
	}
}