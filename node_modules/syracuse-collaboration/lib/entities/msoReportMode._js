"use strict"

var adminHelper = require("syracuse-collaboration/lib/helpers").AdminHelper;

exports.template_storage_volume = "WORD_TEMPLATE_REPORT";
exports.entity = {
	$titleTemplate: "Word report",
	$descriptionTemplate: " ",
	$valueTemplate: " ",
	
	$isPersistent: false,
	
	$properties: {
        reportMode: {
            $title: "Word report",
            $enum: ["choose_tpl", "new_tpl"],
            $enumCaptions: ["Choose existing template", "Create template"],
            $default: "choose_tpl"
        }
	},
    $relations: {
    	document: {
			$title: "Document",
			$type: "document",
			$isDisabled: function(_, instance) {
                return instance.reportMode(_) === "new_tpl";
			},
			$isMandatory: function(_, instance) {
				return instance.reportMode(_) !== "new_tpl";
			},
			// Only show documents stored in predefined storage area
			$lookupFilter: function(_) {
				var db = adminHelper.getCollaborationOrm(_);
				var entity = db.model.getEntity("storageVolume");
			    var instance = db.fetchInstance(_, entity, { "jsonWhere": { "code": exports.template_storage_volume }});
			    if (instance)
			    	return { volume: instance.$uuid };
			} 
    	}
	}
}
