function _processQueryRequest(_, context, parsedUrl) {
	var resources = [];
	var cursor = context.db.createCursor(_, context.entity);
	var data;
	while (data = cursor.next(_)) {
		resources.push(data.serializeInstance(_));
	}

	resources = readTransform.transformData(_, parsedUrl, {
		"$resources": resources
	});

	context.replyResources(_, httpHelpers.httpStatus.OK, resources);
}

function _processUpdateRequest(_, context, parsedUrl, request) {
	var commsObj = comms.getCommsSession(_, parsedUrl.trackingId, context, parsedUrl);
	var db = parsedUrl.endpoint.getOrm(_);
	var model = parsedUrl.endpoint.getModel(_);
	var entity = model.getEntity(_, parsedUrl.representationName);

	var operation = {
		action: function(_) {
			return "$save";
		}
	};

	var sendData = JSON.parse(request.readAll(_));

	commsObj.chunks = commsObj.chunks || chunkHelper.getChunkData(_, parsedUrl, sendData);

	tracer && tracer("_processUpdateRequest - chunks length: " + commsObj.chunks.length);

	if (commsObj.chunks && commsObj.chunks.length) {
		var chunk = writeTransform.transformData(_, parsedUrl, commsObj.chunks[0]);

		var options = {
			url: _buildClientPostUrl(_, parsedUrl),
			body: chunk || {}
		};

		var res = db.postAction(_, operation, entity, utils.getFacet(_, parsedUrl.representation), null, parsedUrl.representation, options);

		var $diagnoses = errorHelper.getErrorObjects(res.body);
		if ($diagnoses && $diagnoses.length > 0) {
			var wrapper = {};
			wrapper.$diagnoses = $diagnoses;
			context.reply(_, 500, readTransform.transformData(_, parsedUrl, wrapper));
			comms.deleteCommsSession(_, commsObj.trackingId);
		} else {
			commsObj.chunks.splice(0, 1);
			if (commsObj.chunks.length) {
				context.reply(_, 206, readTransform.transformData(_, parsedUrl, res.body));
			} else {
				context.reply(_, 200, readTransform.transformData(_, parsedUrl, res.body));
				comms.deleteCommsSession(_, commsObj.trackingId);
			}
		}
	}
}

