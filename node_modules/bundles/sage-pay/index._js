function cacheSecurityData(_, rawResponse) {
	var values = {};
	rawResponse.split('\r\n').map(function(element) {
		var nvp = element.split('=');
		values[nvp[0]] = nvp[1];
	});

	if (values.Status === SPS_STATUS_OK) {
		var VPSTxId = values.VPSTxId.replace(/{/g, '').replace(/}/g, '');// remove the outer {}
		var cacheValues = { 'VPSTxId': VPSTxId,
							'SecurityKey': values.SecurityKey || "", 
							'NextURL': values.NextURL || "",
							'WaitStatus': SPS_WAIT_STATUS_WAIT };

		securityCache.push(cacheValues);

		console.log("cache: " + JSON.stringify(cacheValues));
		return true;
	}
	return false;
}

function notificationResponse(_, request, response) {
	var requestRaw = request.readAll(_).toString();
	var requestJson = {};
	requestRaw.split('&').map(function(element) {
		var nvp = element.split('=');
		requestJson[nvp[0]] = nvp[1];
	});

 	var spsResponseJson = replyToSPSResponse(_, request, requestJson, response);

 	/*
 	 * We've responded to SPS, so cache our notification POST request to the security cache.
 	 */
 	 if (securityCache && requestJson.VPSTxId) {
 		for (var ii = 0, jj = securityCache.length; ii < jj; ii++) {
			if (securityCache[ii].VPSTxId == requestJson.VPSTxId) {
				var securityData = securityCache[ii];
				//securityData.notificationPostJson = requestJson; // shouldn't neet this
				securityData.notificationPostData = requestRaw;

				if (spsResponseJson.Status == SPS_STATUS_OK) {
					securityData.WaitStatus = SPS_WAIT_STATUS_OK;
				} else {
					securityData.WaitStatus = SPS_WAIT_STATUS_INVALID;
				}

				/*
				 * Set the SecurityStatus status to reflect the MD5 check
				 */
				securityData.SecurityStatus = spsResponseJson.Status;
				break;
			}
		}
 	 }
}

function replyToSPSResponse(_, request, requestJson, response) {
	/*
	 * get the content from the POST
	 */
	//securityCache.SecurityKey = 'LZKWYHI74C'; // test only

	// var reqRaw = request.readAll(_).toString();

	// var reqJson = {};
	// reqRaw.split('&').map(function(element) {
