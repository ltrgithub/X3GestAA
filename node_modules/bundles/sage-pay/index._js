	// 	reqJson[nvp[0]] = nvp[1];
	// });

	//var reqJson = buildJsonFromSPS(reqRaw);

	var postValidationJson = validateNotificationPost(_, requestJson);

	var responseJson = {
		'Status': postValidationJson.Status,
		'RedirectURL': request.url,
		'StatusDetail': postValidationJson.StatusDetail
	};
	
