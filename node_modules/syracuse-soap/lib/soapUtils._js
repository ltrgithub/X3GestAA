"use strict";

function isRichMediaContent(type){
	var richMediaContentTypes = [
	                            "text/plain",
	                            "text/html",
	                            "text/xml",
	                            "image",
	                            "sound",
	                            "video",
	                            "application/octet-stream",
	                            "application/x-binary"
	                            ];
	return richMediaContentTypes.indexOf(type) !== -1;
}

exports.convertType = function(type){
	switch (type) {
		case "application/x-string":
			return "xs:string";
		case "application/x-integer":
			return "xs:integer";
		case "application/x-real":
			return "xs:float";
		case "application/x-decimal":
			return "xs:decimal";
		case "application/x-boolean":
			return "xs:boolean";
		case "application/x-date":
			return "xs:date";
		case "application/x-time":
			return "xs:time";
		case "application/x-datetime":
			return "xs:dateTime";
		default:
			if (isRichMediaContent(type)){
				return "b64";
			}else{
				return;
			}
	}
}

exports.convertValue = function(type, value){
	switch (type) {
		case "application/x-date":
		case "application/x-time":
		case "application/x-datetime":
		case "application/x-string":
			return value;
		case "application/x-integer":
			return parseInt(value);
		case "application/x-real":
		case "application/x-decimal":
			return parseFloat(value);
		case "application/x-boolean":
			return value == "true";
		default:
			if (isRichMediaContent(type)){
				return "b64";
			}else{
				return;
			}
	}
}

exports.addKeyToSchema = function(schema){
	schema.$.$key = {
			$type: "application/x-string",
			$isMandatory: true
	}
}