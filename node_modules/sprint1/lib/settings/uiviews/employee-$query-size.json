{
    "$article": {
        "$layout": {
            "$items": [
                {
                    "$category": "section",
                    "$title": "Default horizontal grid",
					"$layout": {
                        "$items": [
                            {
                                "$bind": "$resources",
								"$speedTest2": 300,
								"$selectMode": "row",
                                "$isRowIndexVisible": true,
								"$width" : "auto",
                                "$items": [
                                    {
                                        "$bind": "title",
										"$width" : "120px"
                                    },
                                    {
                                        "$bind": "firstName"
										
                                    },
                                    {
                                        "$bind": "lastName"
                                    },
                                    {
                                        "$bind": "birthDate",
										"$width" : "80px"
                                    },
                                    {
                                        "$bind": "company"
                                    }
                                ]
                            }
                        ]
                    }
                }
            ]
        }
    }
}