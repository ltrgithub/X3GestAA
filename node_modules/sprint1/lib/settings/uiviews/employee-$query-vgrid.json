{
    "$article": {
        "$layout": {
            "$layoutType": "tabs",
            "$items": [
                {
                    "$title": "Default vertical grid",
                    "$category": "section",
                    "$layout": {
                        "$items": [
                            {
                                "$format": "vgrid",
                                "$bind": "$resources",
                                "$items": [
                                    {
                                        "$bind": "title"
                                    },
                                    {
                                        "$bind": "firstName"
                                    },
                                    {
                                        "$bind": "lastName"
                                    },
                                    {
                                        "$bind": "birthDate"
                                    },
                                    {
                                        "$bind": "email"
                                    },
                                    {
                                        "$bind": "company"
                                    },
                                    {
                                        "$bind": "photo"
                                    }
                                ]
                            }
                        ]
                    }
                },
                {
                    "$title": "Selection samples",
                    "$category": "section",
                    "$layout": {
                        "$layoutType": "tabs",
                        "$items": [
                            {
                                "$category": "section",
                                "$title": "multi selection",
                                "$layout": {
                                    "$items": [
                                        {
                                            "$bind": "$resources",
                                            "$format": "vgrid",
                                            "$selectMode": "multi",
                                            "$items": [
                                                {
                                                    "$bind": "firstName"
                                                },
                                                {
                                                    "$bind": "lastName"
                                                },
                                                {
                                                    "$bind": "title"
                                                },
                                                {
                                                    "$bind": "birthDate"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            },
                            {
                                "$category": "section",
                                "$title": "single Selection",
                                "$layout": {
                                    "$items": [
                                        {
                                            "$bind": "$resources",
                                            "$selectMode": "single",
                                            "$format": "vgrid",
                                            "$items": [
                                                {
                                                    "$bind": "firstName"
                                                },
                                                {
                                                    "$bind": "country"
                                                },
                                                {
                                                    "$bind": "company"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                }
            ]
        }
    }
}