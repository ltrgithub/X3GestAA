{
   "$layout":{
      "$items":[
      {
         "$title":"Horizontal Grid",
         "$bind":"$resources",
         "$format":"grid",
         "$selectMode":"single",
         "$alternateStyle":true,

                     "$items":[
            {
               "$bind":"lastName",
               "$cellTitle":"Name",
               "$layout":{
                  "$items":[
                     {
                        "$bind":"lastName",
                        "$isTitleHidden":true
                     },
                     {
                        "$bind":"firstName",
                        "$isTitleHidden":true
                     }
                  ]
               }
            },
            {
               "$bind":"title",
               "$layout":{
                  "$items":[
                     {
                        "$bind":"title"
                     },
                     {
                        "$bind":"maritalStatus"
                     },
                     {
                        "$bind":"birthDate"
                     }
                  ]
               }
            },
            {
               "$bind":"customColumn",
               "$cellTitle":"Custom Column",
               "$layout":{
                  "$layoutType":"tabs",
                  "$items":[
                     {
                        "$title":"{company}",
                        "$items":[
                           {
                              "$bind":"company"
                           },
                           {
                              "$bind":"country"
                           }
                        ]
                     },
                     {
                        "$isBoxCollapsable":true,
                        "$title":"Countries",
                        "$location":{
                           "$url":"/sdata/sprint1/settings/sprint1/countries?representation=country.$query.portlet"
                        }
                     }
                  ]
               }
            }
         ]
	
      }
   ]
   }
}