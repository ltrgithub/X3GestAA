{
   "$article":{
      "$layout":{
         "$items":[
            {
               "$category":"section",
               "$title":"Default horizontal grid",
               "$layout":{
                  "$items":[
                     {
                        "$bind":"$resources",
                        "$items":[
                           {
                              "$bind":"title"
                           },
                           {
                              "$bind":"firstName"
                           },
                           {
                              "$bind":"lastName"
                           },
                           {
                              "$bind":"birthDate"
                           },
                           {
                              "$bind":"email"
                           },
                           {
                              "$bind":"company"
                           },
                           {
                              "$bind":"photo"
                           }
                        ]
                     }
                  ]
               }
            },
            {
               "$category":"section",
               "$title":"Selection samples",
               "$layout":{
                  "$layoutType":"tabs",
                  "$items":[
                     {
                        "$category":"section",
                        "$title":"multi selection Collapse",
                        "$isBoxCollapsable":true,
                        "$layout":{
                           "$items":[
                              {
                                 "$bind":"$resources",
                                 "$selectMode":"multi",
                                 "$items":[
                                    {
                                       "$bind":"title"
                                    },
                                    {
                                       "$bind":"firstName"
                                    },
                                    {
                                       "$bind":"lastName"
                                    },
                                    {
                                       "$bind":"birthDate"
                                    },
                                    {
                                       "$bind":"email"
                                    },
                                    {
                                       "$bind":"company"
                                    },
                                    {
                                       "$bind":"photo"
                                    }
                                 ]
                              }
                           ]
                        }
                     },
                     {
                        "$title":"single Selection",
                        "$category":"section",
                        "$layout":{
                           "$items":[
                              {
                                 "$bind":"$resources",
                                 "$selectMode":"single",
                                 "$items":[
                                    {
                                       "$bind":"firstName"
                                    },
                                    {
                                       "$bind":"country"
                                    },
                                    {
                                       "$bind":"company"
                                    }
                                 ]
                              }
                           ]
                        }
                     },
                     {
                        "$title":"row Selection",
                        "$category":"section",
                        "$layout":{
                           "$items":[
                              {
                                 "$bind":"$resources",
                                 "$selectMode":"row",
                                 "$items":[
                                    {
                                       "$bind":"firstName"
                                    },
                                    {
                                       "$bind":"country"
                                    },
                                    {
                                       "$bind":"company"
                                    }
                                 ]
                              }
                           ]
                        }
                     },
                     {
                        "$title":"Preview",
                        "$category":"section",
                        "$layout":{
                           "$items":[
                              {
                                 "$bind":"$resources",
                                 "$selectMode":"multi",
                                 "$items":[
                                    {
                                       "$bind":"firstName"
                                    },
                                    {
                                       "$bind":"lastName"
                                    }
                                 ],
                                 "$cards":{
                                    "$layout":{
                                       "$layoutType":"row",
                                       "$widths":"25,75",
                                       "$items":[
                                          {
                                             "$layoutType":"stack",
                                             "$items":[
                                                {
                                                   "$bind":"photo",
                                                   "$isTitleHidden":true
                                                }
                                             ]
                                          },
                                          {
                                             "$layoutType":"stack",
                                             "$items":[
                                                {
                                                   "$layoutType":"stack",
                                                   "$items":[
                                                      {
                                                         "$bind":"title"
                                                      },
                                                      {
                                                         "$bind":"maritalStatus"
                                                      }
                                                   ]
                                                },
                                                {
                                                   "$layoutType":"stack",
                                                   "$items":[
                                                      {
                                                         "$bind":"country"
                                                      },
                                                      {
                                                         "$bind":"company"
                                                      }
                                                   ]
                                                }
                                             ]
                                          }
                                       ]
                                    }
                                 }
                              }
                           ]
                        }
                     }
                  ]
               }
            }
         ]
      }
   }
}