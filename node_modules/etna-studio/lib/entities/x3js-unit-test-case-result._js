"use strict";

exports.entity = {
	$canDelete: true,
	$canCreate: true,
	$canEdit: false,
	$capabilities: "",
	$properties: {
		name: {
			$title: "test case",
			$type: 'string',
		},
		passed: {
			$title: "passed",
			$type: 'boolean',
		},
		message: {
			$title: "message",
			$type: 'string',
		},
		stack: {
			$title: "stack",
			$type: 'string',
		},
		duration: {
			$title: "duration (ms)",
			$type: 'integer',
		},
	},
	$functions: {
		fill(_, name, duration, err, pending) {
			this.name(_, name);
			this.message(_, err ? err.message : '');
			this.passed(_, !err && !pending);
			this.stack(_, err ? err.stack : '');
			this.duration(_, duration);
		},
	},
};