"use strict";
const entityHelper = require('etna/lib/x3js/entity-helper');
const classDescriptor = require('etna/lib/x3js/class-descriptor');

exports.entity = {
	$canDelete: false,
	$canCreate: false,
	$canEdit: false,
	$capabilities: "",
	$titleTemplate: "Script",
	$descriptionTemplate: " ",
	$valueTemplate: " ",
	$properties: {}, // will be filled by entityHelper.addProperties
	$functions: {
		$toString(_) {
			return `script ${this._parent.name(_)}.${this.name(_)}`;
		}
	},
	$relations: {},
};

entityHelper.fillEntity(exports.entity, classDescriptor.collections.scripts);