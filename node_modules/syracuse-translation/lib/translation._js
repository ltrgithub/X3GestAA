function _shortestLocale(code, neutral) {
	code = code.toLowerCase();
	var parts = code.split("-");
	if (code === "en-us") return neutral ? "" : "en";
	if (code === "zh-cn") return "zh";
	if (parts.length > 1 && parts[0] === parts[1]) return parts[0];
	return code;
}