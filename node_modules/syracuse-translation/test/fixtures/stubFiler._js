"use strict";

var helpers = require('@sage/syracuse-core').helpers;

function StubFiler() {
	this._data = {};
}

exports.StubFiler = helpers.defineClass(StubFiler, null, {
	open: function(path, flags, mode, _) {
		return 0;
	},
	close: function(fd, _) {
		return;
	},
	readFile: function(path, enc, _) {
		return this._data[path];
	},
	writeFile: function(path, data, enc, _) {
		this._data[path] = data;
	},
	existsSync: function(path) {
		return this._data[path] != null;
	}
});