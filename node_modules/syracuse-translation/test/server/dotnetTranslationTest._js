function trace_update_dotnet(str) {
	var f = "C:\\trace\\trace_update_dotnet.log";
	var strn = str + "\n";
	var options = {
		flag: 'a+'
	};
	fs.appendFileSync(f, new Buffer(strn, 'utf8'), options);
}

function trace_dotnet_extract(str) {

	var f = "C:\\trace\\trace_dotnet_extract.log";
	var strn = str + "\n";
	var options = {
		flag: 'a+'
	};
	fs.appendFileSync(f, new Buffer(strn, 'utf8'), options);
}

