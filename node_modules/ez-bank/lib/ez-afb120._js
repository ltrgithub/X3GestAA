function Monitor() {
  function nanos(hr) {
    return hr[0] * 1e9 + hr[1];
  }

  var start = process.hrtime();

  return function(_step) {
      var diff = process.hrtime(start);
      console.log(_step+ " "+  (nanos(diff)/1e6) + "ms");

  }
}

