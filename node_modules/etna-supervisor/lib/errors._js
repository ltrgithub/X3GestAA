"use strict";
/*
Wraps an array of diagnosis in order to exhibit diagnoses as a collection of AERROR instances
*/

var X3Error = require("etna-engine/lib/runtime/errors").X3Error;
var tracerJs = require("syracuse-trace/lib/helper").getTracer("etna.supervisor");

function Errors(parent) {
	this.collection = true;
	this.diagnoses = parent.getDiagnoses();
}

Errors.prototype.x3Maxtab = function() {
	return this.diagnoses.length;
};

Errors.prototype.index = function(_, position) {
	// AERROR starts at 1:
	if ((position - 1) >= this.diagnoses.length) throw new X3Error(8, "collection index out of range :" + position);
	return this.diagnoses[position - 1];
};

exports.Errors = Errors;