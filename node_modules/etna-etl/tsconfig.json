{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "outDir": "build",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": false,
        "strictNullChecks": false,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}