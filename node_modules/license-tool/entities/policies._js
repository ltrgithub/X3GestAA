// transform last part of locale code to upper case
function _upper(loc) {
	var index = loc.indexOf("-");
	return loc.substr(0, index + 1) + loc.substr(index + 1).toUpperCase();
}

// collect localised titles from working copy
function _collectLocales(source, name) {
	var result = {};
	var en_us = false; // en-us locale
	for (var key in helper.localeObject) {
		var title = source[name + "Title_" + key];
		if (title) {
			if (key === "en-us") en_us = true;
			result[_upper(key)] = title;
		}
	}
	var extra = source[name + "Locales"];
	if (extra) extra.forEach(function(item) {
		if (item.localeCode && item.localeCode.$uuid) {
			var key = item.localeCode.$uuid.toLowerCase();
			result[_upper(key)] = item.title;
			if (key === "en-us") en_us = true;
		}
	});
	if (!en_us) throw new Error(locale.format(module, "noEnUs"));
	return result;
}

// distribute localised titles from policy into working copy
function _distributeLocales(result, name, source) {
	result[name + "Locales"] = [];
	var locObject = helper.loadLocales();
	Object.keys(source).forEach(function(key) {
		var lkey = key.toLowerCase();
		if (lkey in helper.localeObject) {
			// standard locale
			result[name + "Title_" + lkey] = source[key];
		} else { // extra locale
			result[name + "Locales"].push({
				$uuid: lkey,
				localeCode: {
					$uuid: lkey,
					code: lkey,
					title: locObject[lkey]
				},
				title: source[key]
			});
			if (name === "item") result[name + "More"] = true;
		}
	});
	return result;
}