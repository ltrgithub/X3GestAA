function getX3FolderLangs(_, db) {
	var x3folderIsoLangs = [];
	var tablanQuery = db.getEntity(_, "TABLAN", "$query");
	var tablan = db.fetchInstances(_, tablanQuery, {
		sdataWhere: "LANISO ne '' and LANCON eq true"
	});
	tablan && tablan.forEach_(_, function(_, f) {
		x3folderIsoLangs.push(f.LANISO(_));
	});
	return x3folderIsoLangs;
}

function checkMandatoryFields(_, inst) {
	var err = false;
	inst.$diagnoses = inst.$diagnoses || [];
	if (!inst.user(_)) {
		inst.$diagnoses.push({
			$severity: "error",
			$message: locale.format(module, "userMandatory")
		});
		err = true;
	}
	if (!inst.role(_)) {
		inst.$diagnoses.push({
			$severity: "error",
			$message: locale.format(module, "roleMandatory")
		});
		err = true;
	}
	if (!inst.refEndpoint(_)) {
		inst.$diagnoses.push({
			$severity: "error",
			$message: locale.format(module, "epMandatory")
		});
		err = true;
	}
	return err;
}

