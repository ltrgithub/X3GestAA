"use strict";

var fs = require("fs");
var native = require("streamline-streams/lib/endpoints/native");

module.exports = {
	text: {
		reader: function(path, encoding) {
			return native.readable(fs.createReadStream(path, {
				encoding: encoding || 'utf8'
			}));
		},
		writer: function(path, encoding) {
			return native.readable(fs.createWriteStream(path, {
				encoding: encoding || 'utf8'
			}));
		},
	},
	binary: {
		reader: function(path) {
			return native.readable(fs.createReadStream(path));
		},
		writer: function(path, encoding) {
			return native.readable(fs.createWriteStream(path));
		},

	}
}