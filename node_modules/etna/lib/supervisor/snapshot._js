"use strict";
var snapshots = require("etna/lib/supervisor/snapshots");
var helpers = require('syracuse-core').helpers;

var tracerJs = require('syracuse-core').getTracer("etna.supervisor");

var Snapshot = helpers.defineClass(function(instance) {
	this.instance = instance;
	this.snapshotCreated = false;
}, null, {
	enable: function() {
		if (this.snapshotCreated === false) {
			this.instance.enableSnapshot();
		}
		this.snapshotCreated = true;
	},
	disable: function() {
		this.instance.disableSnapshot();
		//this.disableSnapshot();
		this.snapshotCreated = false;
	}
});


snapshots.addSnapshots(Snapshot.prototype);

exports.Snapshot = Snapshot;