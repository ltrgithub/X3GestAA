"use strict";
var os = require('os');
var events = require('events');
var config = require('syracuse-main/lib/nodeconfig').config;
var proxyManager = require('syracuse-studio/lib/dbgp/proxyManager');

var studio = (config.studio || {});
var tracer = studio.trace;
var resolve = !((studio.dbgp || {}).noIpResolving);

exports.$exported = true;

exports.getDbgpProxyAddress = function(_) {
	var cfg = proxyManager.getConfig(_, resolve);
	var host = cfg.ipHost || cfg.host;
	tracer && tracer("getDbgpProxyAddress ==> " + host);
	return host;
};