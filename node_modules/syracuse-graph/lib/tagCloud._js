"use strict";

var locale = require('streamline-locale');
var resourceProxy = require("syracuse-core/lib/resource/resourceProxy");

exports.replyTagCloud = function(_, context) {
	var resource = {};
	var prop = context.entity && context.entity.$properties[context.tagCloudName];
	if (context.instance && prop && prop.$compute) resource = prop.$compute(_, context.instance);
	//
	context.reply(_, 200, resource);
};