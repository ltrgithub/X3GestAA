"use strict";

exports.run = function(_, exporter) {
	var t0 = Date.now();
	var getTableColumns = exporter.getTableColumns,
		executeSql = exporter.executeSql,
		writeResource = exporter.writeResource,
		trace = exporter.trace;

	var AWINDOW_COLUMNS = getTableColumns(_, "AWINDOW");
	var AWINBOUT_COLUMNS = getTableColumns(_, "AWINBOUT");
	var AWINPAR_COLUMNS = getTableColumns(_, "AWINPAR");
	var AWINBRO_COLUMNS = getTableColumns(_, "AWINBRO");

	trace && trace("loading list of tables")
	var WINDOW_NAMES = executeSql(_, "select WIN_0 from AWINDOW order by WIN_0").map(function(elt) {
		return elt.WIN_0;
	}).filter(function(s) {
		return "WXYZ".indexOf(s[0]) < 0;
	});

	WINDOW_NAMES.forEach_(_, exporter.config.parallel || 4, function(_, name, i) {
		trace && trace((i + 1) + "/" + WINDOW_NAMES.length + ": exporting window definition " + name);
		var data = executeSql(_, "select " + AWINDOW_COLUMNS + " from AWINDOW where WIN_0='" + name + "'")[0];
		data.BUTTONS = executeSql(_, "select " + AWINBOUT_COLUMNS.replace(/\bWIN_0,/, '') + //
		" from AWINBOUT where WIN_0='" + name + "' order by NUM_0");
		data.PARAMS = executeSql(_, "select " + AWINPAR_COLUMNS.replace(/\bWIN_0,/, '') + //
		" from AWINPAR where WIN_0='" + name + "' order by NUM_0");
		data.BROWSER = executeSql(_, "select " + AWINBRO_COLUMNS.replace(/\bWIN_0,/, '') + //
		" from AWINBRO where WIN_0='" + name + "'");
		exporter.writeResource(!_, {
			path: exporter.moduleNames[data.MODULE_0] + "/" + (data.CODACT_0 || "STD") + "/WINDOWS/",
			name: data.WIN_0,
			data: data
		});
	});
	trace && trace(WINDOW_NAMES.length + " windows exported in " + Math.round((Date.now() - t0) / 1000) + " seconds");
}