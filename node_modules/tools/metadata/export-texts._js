"use strict";

exports.run = function(_, exporter) {
	var t0 = Date.now();
	var getTableColumns = exporter.getTableColumns,
		executeSql = exporter.executeSql,
		writeResource = exporter.writeResource,
		trace = exporter.trace;

	var ATEXTRA_COLUMNS = getTableColumns(_, "ATEXTRA").filter(function(col) {
			return col !== 'CODFIC_0';
		});

	trace && trace("loading list of texts");
	var TEXT_ELTS = executeSql(_, "select distinct CODFIC_0,LANGUE_0 from ATEXTRA order by CODFIC_0,LANGUE_0");

	TEXT_ELTS.forEach_(_, exporter.config.parallel || 4, function(_, index, i) {
		trace && trace((i + 1) + "/" + TEXT_ELTS.length + ": exporting text definition " + index.CODFIC_0 + " " + index.LANGUE_0);

		var data = executeSql(_, "select CODFIC_0,MODULE_0,CODACT_0 from ATABLE where CODFIC_0='" + index.CODFIC_0 + "'")[0];
		data.TEXTS = executeSql(_, "select " + ATEXTRA_COLUMNS + " from ATEXTRA where CODFIC_0='" //
			 + index.CODFIC_0 + "' and LANGUE_0='" + index.LANGUE_0 + "' order by ZONE_0,IDENT1_0,IDENT2_0");
		
		exporter.writeResource(!_, {
			path: exporter.moduleNames[data.MODULE_0] + "/" + (data.CODACT_0 || "STD") + "/TEXTS/" + index.LANGUE_0,
			name: index.CODFIC_0,
			data: data
		});
	});
	trace && trace(TEXT_ELTS.length + " texts exported in " + Math.round((Date.now() - t0) / 1000) + " seconds");
}