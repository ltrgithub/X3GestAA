"use strict";

exports.entity = {
	$titleTemplate: "Traces configuration",
	$descriptionTemplate: "Traces configuration for '{description}'",
	$valueTemplate: "{name}",
	$canDelete: false,
	$canCreate: false,
	$properties: {
		name: {
			$title: "Name",
			$isReadOnly: true,
			$type: "string"
		},
		description: {
			$title: "Description",
			$isReadOnly: true,
			$type: "string",
			$isLocalized: true
		},
		modularized: {
			$type: "boolean",
			$default: false,
			$isDefined: false,
			$isHidden: true,
			$compute: function(_, instance) {
				return instance.modules(_).getLength() > 0;
			}
		},
		level: {
			$title: "Level",
			$isDefined: function(_, instance) {
				return !instance.modularized(_);
			},
			$enum: [{
				$value: "warn",
				$title: "Warning"
			}, {
				$value: "info",
				$title: "Info"
			}, {
				$value: "debug",
				$title: "Debug"
			}, {
				$value: "error",
				$title: "Error"
			}],
			$default: "error"
		}
	},
	$relations: {
		modules: {
			$title: "Modules",
			$type: "traceConfigModules",
			$isReadOnly: true,
			$isChild: true,
			$inv: "traceConfigs",
			$isDefined: function(_, instance) {
				return instance.modularized(_);
			}
		}
	},
	$functions: {},
	$events: {}
};