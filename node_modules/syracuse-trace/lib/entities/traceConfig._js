"use strict";

var traceHelper = require('syracuse-trace/lib/helper');

function loadTracerConfig(_, conf, name, mod) {
	var tracer = traceHelper.getTracer(name + (mod ? "." + mod : ""));
	if (tracer) {
		var serializedConf = conf.serializeInstance(_);
		mod = serializedConf.modules && serializedConf.modules.filter(function(m) {
			return m.name === mod;
		})[0];
		tracer._loadConfig(serializedConf, mod);
	}
}

exports.entity = {
	$titleTemplate: "Traces configuration for '{description}'",
	$descriptionTemplate: "Configure {name} traces",
	$valueTemplate: "{name}",
	$canDelete: false,
	$canCreate: false,
	$properties: {
		name: {
			$title: "Name",
			$isReadOnly: true,
			$type: "string"
		},
		description: {
			$title: "Description",
			$isReadOnly: true,
			$type: "string",
			$isLocalized: true
		},
		enabled: {
			$title: "Enabled",
			$type: "boolean",
			$default: false
		},
		modularized: {
			$type: "boolean",
			$default: false,
			$isDefined: function(_, instance) {
				return false;
			},
			$compute: function(_, instance) {
				return instance.modules(_).getLength() > 0;
			}
		},
		level: {
			$title: "Tracing level",
			$isDefined: function(_, instance) {
				return instance.enabled(_) && !instance.modularized(_);
			},
			$enum: [{
				$value: "error",
				$title: "Error"
			}, {
				$value: "warning",
				$title: "Warning"
			}, {
				$value: "info",
				$title: "Info"
			}, {
				$value: "debug",
				$title: "Debug"
			}],
			$default: "info"
		}
	},
	$relations: {
		modules: {
			$title: "Modules",
			$type: "traceConfigModules",
			$isReadOnly: true,
			$isChild: true,
			$inv: "traceConfigs",
			$isDefined: function(_, instance) {
				return instance.enabled(_) && instance.modularized(_);
			}
		}
	},
	$functions: {},
	$events: {}
};