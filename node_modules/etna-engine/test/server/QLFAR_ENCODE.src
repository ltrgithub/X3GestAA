End

#**
#* Helper method to check base 64 encoding to blob
#*
#* @param STRIN
#* @param EXPECT
#*!
Subprog CHECK_B64ENCODE_STRING(STRIN, EXPECT)
  Local Clbfile GOT(2)
  Local Blbfile BLB(2)
  Local Integer COUNT

  BLB = toBlbfile(STRIN,GASCII)
  GOT = toBase64(BLB)
  Call CHECK_EQUAL(GOT, EXPECT) From AXUNIT

  #Direct encoding : 
  Call CHECK_EQUAL(toBase64(STRIN), EXPECT) From AXUNIT
End

#**
#* Helper method to check base 64 decoding from blob
#*
#* @param STRIN
#* @param EXPECT
#*!
Subprog CHECK_B64DECODE_STRING(STRIN, EXPECT)
  Local Clbfile GOT(2)
  Local Blbfile BLB(2)
  Local Integer COUNT

  BLB = fromBase64(STRIN)
  GOT = toClbfile(BLB, GASCII)
  Call CHECK_EQUAL(GOT, EXPECT) From AXUNIT
End

#**
#* Helper method to check encoding to utf-8 blob
#*
#* @param STRIN
#* @param EXPECT
#*!
Subprog CHECK_ENCODE_UTF8(STRIN, EXPECT)
  Local Clbfile CLB(1)
  Local Blbfile BLB(1)
  Local Integer COUNT

  BLB = toBlbfile(STRIN, GUTF8) : # utf-8 bytes
  Call CHECK_EQUAL(len(BLB), len(EXPECT)) From AXUNIT

  #reverse :
  CLB = toClbfile(BLB, GASCII) : # utf-8 string
  Call CHECK_EQUAL(CLB,      EXPECT) From AXUNIT
  Call CHECK_EQUAL(len(CLB), len(EXPECT)) From AXUNIT

  CLB = toClbfile(BLB, GUTF8) : # iso-8859-1 string
  Call CHECK_EQUAL(len(CLB), len(STRIN)) From AXUNIT
  Call CHECK_EQUAL(CLB, STRIN) From AXUNIT
End

#**
#* Helper method to check decoding from utf-8 blob
#*
#* @param STRIN
#* @param EXPECT
#*!
Subprog CHECK_DECODE_UTF8(STRIN, EXPECT)
  Local Clbfile CLB(1)
  Local Blbfile BLB(1)
  Local Integer COUNT

  BLB = toBlbfile(STRIN, GASCII) : # iso-8859-1 bytes
  Call CHECK_EQUAL(len(BLB), len(STRIN)) From AXUNIT

  CLB = toClbfile(BLB, GASCII) : # iso-8859-1 string
  Call CHECK_EQUAL(len(CLB), len(STRIN)) From AXUNIT
  Call CHECK_EQUAL(CLB, STRIN) From AXUNIT

  CLB = toClbfile(BLB, GUTF8) : # utf-8 string
  Call CHECK_EQUAL(len(CLB), len(EXPECT)) From AXUNIT
  Call CHECK_EQUAL(CLB, EXPECT) From AXUNIT
End

#**
#* Test function
#*
#* @param STRIN
#*!
Funprog ENCODE(STRIN)
  Local Clbfile CLB(1)
  Local Blbfile BLB(1)
  Local Clbfile CLBOUT(2)
  Local Integer COUNT
  Local Char STR(255)

  BLB = toBlbfile(STRIN, GUTF8) : # utf-8 bytes
  CLB = toClbfile(BLB,  GASCII) : # iso-8859-1

  Append CLBOUT, STRIN
  Append CLBOUT, chr$(10)
  For I=1 To len(STRIN)
    Append CLBOUT, num$(ascii(mid$(STRIN, I,1)))
    Append CLBOUT, " "
  Next

  Append CLBOUT, chr$(10)
  Append CLBOUT, CLB
  Append CLBOUT, chr$(10)
  For I=1 To len(CLB)
    Append CLBOUT, num$(ascii(mid$(CLB, I,1)))
    Append CLBOUT, " "
  Next

#  A = B.C("abc", B, 2, "def",5,CCCC)
End CLBOUT

Funprog ENCODEB64(STRIN)
  Local Clbfile CLB(1)
  Local Blbfile BLB(1)
  Local Clbfile CLBOUT(2)
  Local Integer COUNT
  Local Char STR(255)

  BLB = toBlbfile(STRIN, GASCII)
  CLB = toBase64(BLB)

  Append CLBOUT, STRIN
  Append CLBOUT, chr$(10)
  For I=1 To len(STRIN)
    Append CLBOUT, num$(ascii(mid$(STRIN, I,1)))
    Append CLBOUT, " "
  Next

  Append CLBOUT, chr$(10)
  Append CLBOUT, CLB
  Append CLBOUT, chr$(10)
  For I=1 To len(CLB)
    Append CLBOUT, num$(ascii(mid$(CLB, I,1)))
    Append CLBOUT, " "
  Next

#  A = B.C("abc", B, 2, "def",5,CCCC)
End CLBOUT
