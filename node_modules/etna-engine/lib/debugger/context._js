			fullpath = [frame.context.superv.solutionPath.replace(/\\/g, '/'), segments[1], _folderMap[ext], file].join("/"),
			source = getSource(fullpath, options.b, options.e);

		resp.$.success = ~~ (source != null);
		resp.$value = source;
	},

